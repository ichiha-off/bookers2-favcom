<% if @book.errors.any? %>
  <div id="error_explanation">
      <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
          <% @book.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
      </ul>
  </div>
<% end %>
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @newbook %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book.user_id) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
							<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>
					<% if @book.user == current_user %>
						<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
					<td>  
						<i class="fa fa-comment"></i>
  					<a href="#comments"><%= @book.book_comments.count %></a>
					</td>
				</tr>
		</table>
		<div class="comment-list bt style-2" id="comments">
			<div class="float-wrapper">
				<h2 class="comment-count"><%= @book.book_comments.count %>件コメント</h2>
			</div>
		</div>
		<table class="table">
			<% @book.book_comments.each do |book_comment| %>
			<tr>
				<div class="comment">
					<div class="comment-body bb">
						<div class="comment-avatar">
							<div class="avatar">
								<td><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
							</div>
						</div>
						<div class="comment-text">
							<div class="comment-author clearfix">
								<td><a href="#" class="link-author"><%= book_comment.user.name %></a></td>
								<span class="comment-meta">
									<td><span class="comment-date"><%= book_comment.created_at.strftime('%Y/%m/%d') %></span></td>
								</span>
							</div>
							<td>
								<div class="comment-entry"><%= book_comment.comment %></div>
							</td>
						</div>
					</div>
				</div>
			</tr>
			<% end %>
		</table>
		<%= form_for [@book, @book_comment] do |f| %>
			<div class="row">
				<div class="col-xs-12">
					<%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
				</div>
			</div>
			<%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
		<% end %>
	</div>
</div>

